<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/ic_spash"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome to \n  OctoDroid"
        android:textSize="35dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView14_wel" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/textView14_wel">





        <TextView
            android:layout_marginTop="6dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="OctoPrint IP address:"
            android:id="@+id/textView14"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText_welcome_IP"
            android:layout_below="@+id/textView14"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="OctoPrint API Key"
            android:id="@+id/textView16"
            android:layout_below="@+id/editText_welcome_IP"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_marginLeft="6dp"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText_welcome_API"
            android:layout_below="@id/textView16"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/button_QR"
            android:layout_toStartOf="@+id/button_QR" />

        <Button
            android:layout_marginRight="6dp"
            android:layout_below="@id/textView16"
            android:layout_marginTop="2dp"
            android:background="#00ACC1"
            android:layout_marginBottom="2dp"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QR"
            android:id="@+id/button_QR"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_margin="6dp"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Next Step"
            android:background="#00ACC1"
            android:layout_below="@id/editText_welcome_API"
            android:id="@+id/button_check_con"
            android:layout_centerHorizontal="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Skip this"
            android:background="#00ACC1"
            android:layout_margin="6dp"
            android:id="@+id/button_Skip"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/editText_welcome_API"
            android:layout_toLeftOf="@id/button_check_con"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


    </RelativeLayout>
</RelativeLayout>
